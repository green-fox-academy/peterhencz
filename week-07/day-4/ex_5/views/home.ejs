<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/static/style.css">
  <title>weather forecast</title>
</head>
<body>
  <span class="shrink line"><b>Weather Forecast</b> Select a city for the forecast</span><br><br>
  <% weatherData.forEach(function(item, index) { %>
    <a href="/?cities=<%=item.city%>&id=<%=index%>">
      <div class="shrink <%= item.weather[0].icon %>">
        <p class="city"><%= item.city %></p>
        <p class="location"><%= item.location %></p>
        <p class="temp"><%= item.weather[0].temp %>Â°</p>
        <img class="img" src="/assets/<%= item.weather[0].icon%>.svg">
      </div>
    </a>
  <% }); %>  
</body>
</html>



 